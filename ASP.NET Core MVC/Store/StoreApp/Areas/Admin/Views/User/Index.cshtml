@model IEnumerable<IdentityUser>

<div class="text-center my-5">
  <div class="display-6">
    Users
  </div>
</div>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Username</th>
      <th>Roles</th>
      <th>Operation</th>
    </tr>
  </thead>
  <tbody>
    @foreach (IdentityUser user in Model)
    {
      <tr>
        <td>@user.Id</td>
        <td>@user.UserName</td>
        <td>-</td>
        <td>
          <div class="btn-group">
            <a class="btn btn-secondary rounded-0" asp-action="Update" asp-route-id="@user.UserName">
              Edit
            </a>
            <a class="btn btn-outline-secondary rounded-0" asp-action="ResetPassword" asp-route-id="@user.UserName">
              Reset Password
            </a>
            <form method="POST" asp-action="DeleteOneUser">
              <input type="hidden" name="UserName" value="@user.UserName" />
              <button type="submit" class="btn btn-danger rounded-0">
                <i class="fa-solid fa-trash"></i>
                Delete
              </button>
            </form>
          </div>
        </td>
      </tr>
    }
  </tbody>
</table>