@model Product

<div class="row">
  <div class="col-md-12">
    <div class="text-center">
      <h6 class="dipslay-6">
        <h3>@Model.ProductName</h3>
      </h6>
      <img class="img-fluid shadow rounded-3 my-3" src="@Model?.ImageUrl" alt="@Model.ProductName">
      <p class="lead text-danger">@Model.Price.ToString("C")</p>
    </div>
  </div>
</div>



<div class="btn-group">
  <a class="btn btn-primary" asp-controller="Home" asp-action="Index">
    <i class="fa-solid fa-house"></i>
    Home
  </a>
  <a class="btn btn-outline-primary" asp-controller="Product" asp-action="Index">
    <i class="fa-solid fa-list"></i>
    Products
  </a>
</div>

@section Header {
  <div>
    Header only for Get
  </div>
}